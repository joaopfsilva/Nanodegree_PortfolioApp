<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffdfeaf1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joaopfsilva.portfolioapp.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="#ffdfeaf1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_centerHorizontal="true"
        android:textSize="10pt"
        android:id="@+id/textView" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/buttonSpotify"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#F08C35"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE APP"
        android:id="@+id/buttonScore"
        android:layout_below="@+id/buttonSpotify"
        android:layout_marginTop="17dp"
        android:layout_alignLeft="@+id/buttonSpotify"
        android:layout_alignStart="@+id/buttonSpotify"
        android:background="#F08C35"
        android:layout_alignRight="@+id/buttonSpotify"
        android:layout_alignEnd="@+id/buttonSpotify" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/buttonLibrary"
        android:layout_below="@+id/buttonScore"
        android:layout_marginTop="17dp"
        android:layout_alignLeft="@+id/buttonScore"
        android:layout_alignStart="@+id/buttonScore"
        android:background="#F08C35"
        android:layout_alignRight="@+id/buttonScore"
        android:layout_alignEnd="@+id/buttonScore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buttonBigger"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/buttonLibrary"
        android:layout_alignLeft="@+id/buttonLibrary"
        android:layout_alignStart="@+id/buttonLibrary"
        android:background="#F08C35"
        android:layout_alignRight="@+id/buttonLibrary"
        android:layout_alignEnd="@+id/buttonLibrary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACON READER"
        android:id="@+id/buttonBacon"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/buttonBigger"
        android:layout_alignLeft="@+id/buttonBigger"
        android:layout_alignStart="@+id/buttonBigger"
        android:background="#F08C35"
        android:layout_alignRight="@+id/buttonBigger"
        android:layout_alignEnd="@+id/buttonBigger" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/buttonCapstone"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/buttonBacon"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#C62828"
        android:layout_alignRight="@+id/buttonBacon"
        android:layout_alignEnd="@+id/buttonBacon" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
